@using System.Linq
@using DevToolbox.Common

<div class="features">
    <table cellspacing="0" cellpadding="0">
        <colgroup>
            <col class="feature" />
            <col class="allowlist" />
        </colgroup>
        <thead>
            <tr>
                <th>Feature</th>
                <th>Allowlist</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    <FeatureInput>
                        <option value="" disabled selected hidden>Select feature&hellip;</option>
                        @foreach(var feature in availableFeatures) {
                            <option value="@feature.SpecificationName">@feature.DisplayName</option>
                        }
                    </FeatureInput>
                </td>
                <td>
                    <FeatureInput placeholder="None allowed" autoexpand />
                </td>
            </tr>
        </tbody>
    </table>
</div>

@code {

    private List<string> selectedFeatures = new List<string>() {
        "accelerometer"
    };

    private readonly List<Feature> features =
        typeof(Features).GetProperties().Select(pi => (Feature) pi.GetValue(null)).ToList();

    private List<Feature> availableFeatures;

    public PolicyFieldBuilder() {
        availableFeatures = features.Where(feature => !selectedFeatures.Contains(feature.SpecificationName)).ToList();
    }
}